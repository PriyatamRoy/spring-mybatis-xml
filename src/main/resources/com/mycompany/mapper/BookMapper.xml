<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mycompany.mapper.BookMapper" >
	<resultMap id="bookResult" type="com.mycompany.model.Book">
		<id property="id" column="id" />
		<result property="title" column="title"/>
		<result property="author" column="author"/>
                <result property="description" column="description"/>
                <result property="price" column="price"/>
                <result property="isbn" column="isbn"/>
                <result property="createDate" column="createDate"/>
	</resultMap>
        <select id="getAll" resultType="com.mycompany.model.Book" resultMap="bookResult">
	    SELECT * from book
	</select>
	<select id="selectBook" resultType="com.mycompany.model.Book" parameterType="int" resultMap="bookResult">
	    SELECT id, title, author, description, price, isbn, create_date from book WHERE id = #{id}
	</select>
	<insert id="insertBook" parameterType="com.mycompany.model.Book"  keyProperty="id" useGeneratedKeys="true">
		INSERT into book (title, author, description, price, isbn, create_date) VALUES(#(title), #(author), #(description), #(price), #(isbn), #(create_date)) 	    
	</insert>
